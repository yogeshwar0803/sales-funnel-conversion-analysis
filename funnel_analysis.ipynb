import pandas as pd

# -----------------------------
# Load Data
# -----------------------------
data = {
    "Stage": [
        "Website Visits",
        "Product Views",
        "Add to Cart",
        "Checkout Started",
        "Purchase Completed"
    ],
    "Users": [100000, 60000, 25000, 15000, 9000]
}

df = pd.DataFrame(data)

# -----------------------------
# Calculate Conversion Rates
# -----------------------------
df["Conversion_Rate"] = df["Users"] / df["Users"].shift(1)
df.loc[0, "Conversion_Rate"] = 1.0

# -----------------------------
# Drop-off Calculation
# -----------------------------
df["Drop_Off"] = 1 - df["Conversion_Rate"]

df


Business Impact Simulation

# Simulate improvement at Product View â†’ Add to Cart stage
improvement_rate = 0.50  # improving conversion from ~41.7% to 50%

new_add_to_cart = df.loc[1, "Users"] * improvement_rate
checkout_rate = df.loc[3, "Users"] / df.loc[2, "Users"]
purchase_rate = df.loc[4, "Users"] / df.loc[3, "Users"]

new_purchases = new_add_to_cart * checkout_rate * purchase_rate
increase_percentage = (new_purchases - df.loc[4, "Users"]) / df.loc[4, "Users"] * 100

increase_percentage
